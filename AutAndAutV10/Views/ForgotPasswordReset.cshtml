@using AutAndAutV10.Controllers
@using AutAndAutV10.Models
@inherits UmbracoViewPage<ForgottenPasswordResetModel>
@model AutAndAutV10.Models.ForgottenPasswordResetModel


<div class="login-container">
    <div class="wrapper-container">
        @using (Html.BeginUmbracoForm<MemberController>("ForgottenPasswordReset", FormMethod.Post))
        {
            <div class="login-label position">
                @Html.LabelFor(m => m.Email)
            </div>

            <div class="login-label position">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
            </div>

            <div class="login-label position">
                @Html.LabelFor(m => m.Password)
            </div>

            <div class="login-label position">
                @Html.TextBoxFor(m => m.Password, new { placeholder = "Password" })
            </div>

            <div class="login-label position">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>

            <div class="login-label position">
                @Html.TextBoxFor(m => m.ConfirmPassword, new { placeholder = "ConfirmPassword" })
            </div>

            <div class="position">
                <button name="login" type="submit">Reset Password</button>
            </div>
            @Html.ValidationSummary()
        }
    </div>
</div>